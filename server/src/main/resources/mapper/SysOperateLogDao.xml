<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qxf.dao.SysOperateLogDao">

    <resultMap type="com.qxf.entity.SysOperateLog" id="SysOperateLogMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="requestUrl" column="request_url" jdbcType="VARCHAR"/>
        <result property="remoteAddr" column="remote_addr" jdbcType="VARCHAR"/>
        <result property="params" column="params" jdbcType="VARCHAR"/>
        <result property="method" column="method" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="isSuccess" column="is_success" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysOperateLogMap">
        select
          id, request_url, remote_addr, params, method, create_time, user_id, is_success
        from boot_vue.sys_operate_log
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysOperateLogMap">
        select
          id, request_url, remote_addr, params, method, create_time, user_id, is_success
        from boot_vue.sys_operate_log
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysOperateLogMap">
        select
          id, request_url, remote_addr, params, method, create_time, user_id, is_success
        from boot_vue.sys_operate_log
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="requestUrl != null and requestUrl != ''">
                and request_url = #{requestUrl}
            </if>
            <if test="remoteAddr != null and remoteAddr != ''">
                and remote_addr = #{remoteAddr}
            </if>
            <if test="params != null and params != ''">
                and params = #{params}
            </if>
            <if test="method != null and method != ''">
                and method = #{method}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="isSuccess != null">
                and is_success = #{isSuccess}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into boot_vue.sys_operate_log(request_url, remote_addr, params, method, create_time, user_id, is_success)
        values (#{requestUrl}, #{remoteAddr}, #{params}, #{method}, #{createTime}, #{userId}, #{isSuccess})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update boot_vue.sys_operate_log
        <set>
            <if test="requestUrl != null and requestUrl != ''">
                request_url = #{requestUrl},
            </if>
            <if test="remoteAddr != null and remoteAddr != ''">
                remote_addr = #{remoteAddr},
            </if>
            <if test="params != null and params != ''">
                params = #{params},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="isSuccess != null">
                is_success = #{isSuccess},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from boot_vue.sys_operate_log where id = #{id}
    </delete>

</mapper>